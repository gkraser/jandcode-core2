<?xml version="1.0" encoding="utf-8"?>
<root>

    <x-depends module="jandcode.core.dbm"/>
    <x-depends module="jandcode.core.db.h2"/>
    <x-depends module="jandcode.core.db.mariadb"/>
    <x-depends module="jandcode.core.db.oracle"/>

    <dbm>

        <model name="jandcode.core.dbm">
            <flag m0="jandcode.core.dbm"/>
        </model>

        <model name="test.1">
            <flag m1="test.1"/>
        </model>

        <!-- =================== -->

        <model name="test.2">
            <dbtype name="jdbc">
                <flag name="f1" value="1"/>
            </dbtype>
            <flag m2="test.2"/>
            <include name="test.1"/>
        </model>

        <model name="test.2.inst" instance="test.2">
            <flag m2.1="test.2.inst"/>
        </model>

        <!-- =================== -->

        <model name="test1" instance="test.2">
        </model>


    </dbm>

    <!-- ===================================================================== -->

    <cfg>
        <dbsource name="test.2.inst"
                  dbdriver="mariadb" flag.db.mysql="1"/>

        <dbsource name="test1"
                  dbdriver="mariadb"
                  database="jc2_dbm_db_test"
                  username="root"
        />

    </cfg>

</root>