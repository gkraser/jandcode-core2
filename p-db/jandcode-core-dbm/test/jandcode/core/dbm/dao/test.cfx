<?xml version="1.0" encoding="utf-8"?>
<root>

    <x-depends module="jandcode.core.dbm"/>
    <x-depends module="jandcode.core.db.h2"/>

    <dbm>

        <model name="base1">
            <include name="jandcode.core.dbm.dao"/>
        </model>

        <model name="default" instance="base1">
        </model>

        <model name="model2" instance="base1">
        </model>

        <model name="test1" instance="base1">
        </model>

    </dbm>

    <dao>
        <daoHolder name="h1">
            <rule name="i" mask="**/*" daoInvoker="model:test1"/>
            <item name="p1"
                  package="jandcode.core.dbm.dao.data"/>
        </daoHolder>
    </dao>

    <!-- ===================================================================== -->

    <cfg>

        <dbsource name="test1"
                  dbdriver="h2.mem"
                  database="test1"
        />

    </cfg>


</root>