<?xml version="1.0" encoding="utf-8"?>
<root>

    <db>
        <dbdriver name="mariadb" parent="base" class="jandcode.db.mariadb.MariadbDbDriver"
                  dbtype="mysql">
            <dbsource-default
                    url="jdbc:mariadb://${host}"
                    host="localhost"
                    system.database="mysql"
                    system.username="root"
                    dbcp.validationQuery="select 1"
                    conn.serverTimezone="UTC"
                    conn.useSSL="false">

                <bean name="jandcode.db.DbManagerService"
                      class="jandcode.db.mariadb.MariadbDbManagerService"/>

            </dbsource-default>

            <dbdatatype name="memo"
                        sqltype="longtext"/>

            <dbdatatype name="date"
                        sqltype="date"/>

            <dbdatatype name="datetime"
                        sqltype="timestamp"/>

        </dbdriver>

    </db>

</root>