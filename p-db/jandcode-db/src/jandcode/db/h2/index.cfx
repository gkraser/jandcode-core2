<?xml version="1.0" encoding="utf-8"?>
<root>

    <db>
        <dbdriver name="h2" parent="base" class="jandcode.db.h2.H2DbDriver"
                  dbtype="h2">
            <dbsource-default
                    url="jdbc:h2:${database}"
            />
        </dbdriver>

        <dbdriver name="h2.mem" parent="h2">
            <dbsource-default
                    url="jdbc:h2:mem:${database};DB_CLOSE_DELAY=-1"
            />
        </dbdriver>

    </db>

</root>